mixin nav(user)
	.nav
		.bg
		.overlay
			.main-panel
				a.home(href="/")
				.search-box
					input(type="text")
					i.icon-close
			.util-panel
				a.doc
				a.get-started GET STARTED
				if user
					a.user(href="/user/#{user.name}")
						img.avatar(src="#{user.avatarMedium}")
				else	
					a.login
		ul.dropdown.hide
			li 
				a MY BIA CARD
			li
				a SETTINGS
			li
				a LOG OUT

mixin user(user,pkgs)
	section.user.card
		img.avatar(src="#{user.avatarMedium}")
		.username #{user.name}
		.user-packages #{pkgs.length} packages

mixin user-info()
	section.user-info.card
		.head USER INFORMATION
		.body
			table
				if user.displayName
					tr
						td Full Name
						td #{user.displayName}
				tr
					td Email
					td
						a #{user.email}
				if user.github
					tr
						td Github
						td
							a(href="#{user.github}") #{user.github}

mixin package-info(pkg)
	a.package-info.card(href="/package/#{pkg.name}" target="_blank")
		img.avatar(src="#{pkg.author.avatarMedium}")
		.content
			.top
				.package-name #{pkg.name}
				.version #{pkg.version}
			.bottom
				p.description #{pkg.description} 
				.stat

mixin package-info-no-avatar(pkg)
	a.package-info.card(href="/package/#{pkg.name}" target="_blank")
		.content
			.top
				.package-name #{pkg.name}
				.version #{pkg.version}
			.bottom
				p.description #{pkg.description} 
				.stat

mixin package-stat(pkg)
	section.package-stat.card
		.top
			a(href="/user/#{pkg.author.name}" target="_blank")
				img.avatar(src="#{pkg.author.avatarMedium}")
			.txt #{pkg.author.name} updated at #{moment(new Date(pkg.time.modified)).format('MM/DD YYYY')}
		.bottom
			//- a.item
			//- 	i(class="icon-like") 
			//- 	span 299
			a.item(href="#{pkg.homepage}" target="_blank")
				i(class="icon-home") 
				span Repo
			a.item(href="#{pkg.bugs.url}" target="_blank")
				i(class="icon-issue")
				span Issues

mixin maintainers(maintainers)
	section.maintainers.card
		.head MAINTAINERS
		.body
			each maintainer in maintainers
				a(href="/user/#{maintainer.name}" target="_blank")
					img.avatar(src="#{maintainer.avatarMedium}")
				
mixin command(title,content)
	section.command.card
		.title #{title}
		.content 
			.txt #{content}

