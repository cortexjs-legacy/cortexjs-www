include ./mixin/component

extends layout/default.jade

block head  
  title cortex
  +css('/css/login.css')

block content  
  +nav()
  section.container
    if message
      .message #{message}
      
    form(method="POST", action="/login-directly")
      input(name="username", placeholder="Username")
      input(name="password", type="password", placeholder="Password")
      button(type="submit") Sigin
      button(type="reset") Reset

    a(href="/auth/github") Signin/Signup with Github
