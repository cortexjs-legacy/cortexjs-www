include ./mixin/component

extends layout/default.jade

block head  
  title cortex
  +css('/css/login.css')

block content  
  +nav()
  section.container
    if message
      .message #{message}
      
    form.login(method="POST", action="/login-directly")
      input.name(name="username", placeholder="Username")
      input.pass(name="password", type="password", placeholder="Password")
      button.signin(type="submit") Sigin
      button.reset(type="reset") Reset

    a.github(href="/auth/github") Signin/Signup with Github
