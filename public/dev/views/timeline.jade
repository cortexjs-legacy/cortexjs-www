					span update a package 
					a mbox
				.date 1 hour ago
			.event
				a.user(href="/~#{user.name}")
					img.avatar(src="#{user.avatarMedium}")
				.action 
					a spud
					span  follows you
				.date 2 hour ago
		.aside.area
			+user(profile, pkgs,user.name!=profile.name)
			.info-panel.animated.fadeInDown
				.head MY PACKAGES
				.body
					.content
						table
							each pkg in pkgs
								tr
									td 
										a(href="/package/#{pkg.name}" target="_blank") #{pkg.name}
									td #{pkg.version}
	script.
		facade({
			mod: 'cortexjs-www/entries/collections'
		});


