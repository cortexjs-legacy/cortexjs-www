include ./mixin/component

extends layout/default.jade

block head  
	title cortex
	+css("/css/timeline.css")

block content  
	+nav(user)
	section.container
		.main.area
			.event
				a.user(href="/~#{user.name}")
					img.avatar(src="#{user.avatarMedium}")
				.action 
					span update a package 
					a mbox 
					span to version 
					a 1.2.1
				.date 1 hour ago
			.event
				a.user(href="/~#{user.name}")
