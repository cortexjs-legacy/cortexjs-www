global-reset()

@import "common/*"
@import "mixins/*"

.container
	.top-area
		height:90px
		padding 30px 0px
		.info
			badge(red)
	.packages
		center()
		clearfix()
		margin-bottom:50px
		.package-info
			float:left

@media (min-width: 0px)
	.packages
		width:100%
		.package-info
			package-info(100%)
			margin:2% 0%
			float:left

@media (min-width: 700px)
	.packages
		width:95%
		.package-info
			package-info(47%)
			margin:1.5%
			float:left


@media (min-width: 1100px)
	.packages
		width:95%
		.package-info
			package-info(31.3%)
			margin:1%
			float:left
	
