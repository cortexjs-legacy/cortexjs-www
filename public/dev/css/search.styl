global-reset()

@import "common/*"
@import "mixins/*"

nav_short()

.container
  .top-area
    height:90px
    padding 30px 0px
    .info
      badge(red)
  .packages
    center()
    clearfix()
    margin-bottom:50px
    .package-info
      package-info(true)
      float:left

@media (min-width: 0px)
  .packages
    width:100%
    .package-info
      width:100%
      margin:2% 0%
      float:left

@media (min-width: 700px)
  .packages
    width:95%
    .package-info
      width:47%
      margin:1.5%
      float:left


@media (min-width: 1100px)
  .packages
    width:95%
    .package-info
      width:31.3%
      margin:1%
      float:left
  
