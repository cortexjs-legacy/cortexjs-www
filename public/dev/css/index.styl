global-reset()

@import "common/*"
@import "mixins/*"

.nav
  .bg
    background-position: 0 -60px

.banner
  image:"../img/slogan-bg.png"
  height:420px
  position:relative
  background-color:#02060e
  background-position:center -60px
  .brands
    float: left
    width: 400px
    position: relative
    clearfix()
    .logo-large
      display:block
      margin: 40px auto 30px auto
    .slogan
      margin-top: 30px
      font-size:24px
      line-height:1.2
      font-weight:100
      color:#ffffff
      text-align:center
  .form
    width: 300px
    float: right
    padding-top: 50px
    .signup
      form-button(#fff, #39d, #4ae, #369)
    .signup-github
      form-button(#fff, #79d858, #8e6, #4a993e)
      .socicon-github
        margin-right: 10px

.main-content
  center()
  padding:25px 0px
  clearfix()
  .info-panel
    user-info()
    height: 430px
    float:left
    ul
      font-family:Titillium Web
      color:#777777
      font-size:17px
      line-height:40px
      li
        border-bottom:1px solid #d0d7dd
        height:40px
        &:nth-child(odd)
          background-color:#f0f1f5
        &:nth-child(even)
          background-color:#e9eaee
        a
          display: block
          clearfix()
          &:hover .title
            text-decoration: underline
        .title
          display:inline-block
          float:left
          padding-left:30px
          max-width:60%
          overflow:hidden
        .detail
          font-size:15px
          display:inline-block
          float:right
          padding-right:30px
          overflow:hidden
          color:light_grey

@media (min-width: 0px) and (max-width: 700px)
  .main-content
    width:100%
    .info-panel
      width:100%
      margin:4% 0%
  .banner .brands
    width: 100%
    height: 360px
    padding: 10px
    .logo-large
      width: 180px
  .banner .form
    width: 100%
    padding: 10px
  .nav .overlay .main-panel .search-box input[type=text]
    width: 300px
    &:focus
      width: 300px

@media (min-width: 700px)
  .main-content
    width:95%
    .info-panel
      width:47%
      margin:1.5%

@media (min-width: 1000px)
  .main-content
    width:95%
    .info-panel
      width:30.3%
      margin:1.5%

