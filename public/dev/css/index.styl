global-reset()

@import "common/*"
@import "mixins/*"

.nav
	.bg
		background-color:#02060e

.banner
	height:380px
	position:relative
	background-color:#02060e
	.logo-large
		display:block
		position:absolute
		top:60px
		left:50%
		margin-left:-113px
	.slogan
		font-size:24px
		line-height:1.2
		font-weight:100
		color:#ffffff
		width:90%
		text-align:center
		position:absolute
		top:254px
		left:5%

.main-content
	center()
	padding:25px 0px
	clearfix()
	.info-panel
		float:left

@media (min-width: 0px)
	.main-content
		width:100%
		.info-panel
			user-info(100%)
			margin:4% 0% 
		
@media (min-width: 600px)
	.main-content
		width:95%
		.info-panel
			user-info(47%)
			margin:1.5%

@media (min-width: 1000px)
	.main-content
		width:95%
		.info-panel
			user-info(30.3%)
			margin:1.5%

