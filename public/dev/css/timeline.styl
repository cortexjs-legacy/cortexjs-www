global-reset()

@import "common/*"
@import "mixins/*"

nav_short()

a
	color:blue

.container
	center()
	clearfix()
	margin-top:30px
	width:90%
	.area
		margin:1%

.main
	float:left
	width:68%
	background-color:#ffffff
	padding:0px 25px
	box-shadow:card_shadow

.aside
	float:left
	width:28%
	.user
		user()
		margin-bottom:20px
		height:200px
		padding-top:10px
		img.avatar
			margin-top:16px
			cycle(80px)
		.username
			display:none
		.info-area
			margin-top:20px
			.item
				.content
					font-size:24px
				.title
					font-size:10px
	.info-panel
		user-info()
		height:410px
		.content
			overflow:scroll
			height:300px

.event
	border-bottom:1px solid #efefef
	padding:16px 0px
	clearfix()
	&:last-child
		border-bottom:none
	.user
		float:left
		.avatar
			cycle(50px)
	.action
		float:left
		margin-left:10px
		line-height:50px
		font-size:16px
	.date
		float:right
		color:grey
		margin-top:6px
		margin-right:6px
		font-size:14px



	
